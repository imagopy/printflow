# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/printflow"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"

# Server
PORT=3001
NODE_ENV=development

# Redis (optional, for rate limiting)
REDIS_URL="redis://localhost:6379"

# Email Service (choose one)
# SendGrid
SENDGRID_API_KEY="your-sendgrid-api-key"
SENDGRID_FROM_EMAIL="noreply@printflow.com"
SENDGRID_FROM_NAME="PrintFlow"

# OR AWS SES
AWS_SES_REGION="us-east-1"
AWS_SES_FROM_EMAIL="noreply@printflow.com"

# File Storage (S3 or CloudFlare R2)
# AWS S3
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_S3_BUCKET="printflow-files"
AWS_S3_REGION="us-east-1"

# OR CloudFlare R2 (S3-compatible)
# R2_ACCESS_KEY_ID="your-r2-access-key"
# R2_SECRET_ACCESS_KEY="your-r2-secret-key"
# R2_BUCKET="printflow-files"
# R2_ENDPOINT="https://your-account-id.r2.cloudflarestorage.com"

# PDF Generation
PUPPETEER_EXECUTABLE_PATH="/usr/bin/chromium-browser"  # Optional, for production
PDF_STORAGE_PATH="./temp/pdfs"  # Local temp storage before upload

# Application URLs
APP_URL="http://localhost:3000"
API_URL="http://localhost:3001"

# Company Info (for quotes)
COMPANY_NAME="PrintFlow Solutions"
COMPANY_ADDRESS="123 Print Street, Design City, DC 12345"
COMPANY_PHONE="+1 (555) 123-4567"
COMPANY_EMAIL="info@printflow.com"
COMPANY_WEBSITE="https://printflow.com"